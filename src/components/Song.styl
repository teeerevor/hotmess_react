@import '../styles/colours'

$song-padding-hoz= 8px
$song-padding-vert= 15px
$song-border-radius= 5px
$song-bottom-margin= 3px


.song
  display: flex
  list-style: none
  margin-bottom: $song-bottom-margin

  &:hover
    .tag
      background-color: $dark-grey
    button
      svg
        color: tomato
    .iconPlay
      transform: translateX(-30px)

  &.shortlisted
    .tag
      background-color: rgba(199,235,95,0.4)
    .circleButton
      opacity: 0
    .iconSelected
      display: inline
    .iconPlay
      opacity: 0
  &.open
    .iconPlay
      opacity: 0
    .tag
      background: $song-background
      padding-bottom: 15px

.iconSelected,
.iconPlay
  width: 14px
  height: 14px
  position: absolute
  transition: transform ease-out 200ms
  top: 12px

.iconPlay
  fill: white
  right: -20px

.iconSelected
  right: 10px
  fill: rgba(199,235,95,1)
  display: none

.tag
  overflow: hidden
  cursor: pointer
  border-radius: 5px
  background: $song-background
  flex: 1
  padding: 10px $song-padding-vert
  position: relative


.songAudio
  position: relative
  padding-top: 15px


.bigList
  .tag
    overflow: hidden

