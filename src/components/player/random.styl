@import '../../styles/colours'
@import '../../styles/helpers'
@import 'control_panel'

.box
  display: flex
  width: 100%

.left
  display: flex
  justify-content: center
  align-items: center

.right, .left
  flex: 1

.right
  display: none
  +media-wider-then(1200px)
    display: block

.random
  @extend .button-big
  position: relative
  svg
    @extend .play

.random&:hover .i-feel-lucky
  transform: translateX(10px)
  opacity: 1
  z-index: 0

.i-feel-lucky
  position: absolute
  top: 8px
  left: 20px
  letter-spacing: 1px
  min-width: 170px
  font-size: 14px
  opacity: 0
  will-change: transform, opacity
  transition-property: opacity transform
  transition-duration: 100ms


